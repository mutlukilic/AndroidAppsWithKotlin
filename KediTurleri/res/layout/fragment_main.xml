<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">
        <TextView
                android:text="Kedi Türleri ve Özellikleri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="30sp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
        />
        <TableLayout
                android:layout_width="0dp"
                android:id="@+id/tableLayout"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_height="0dp">

            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/van"
                        android:tag="van"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        
                />
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/iran"
                        android:tag="iran"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        
                />
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ankara"
                        android:tag="ankara"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        
                />
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/siyam"
                        android:tag="siyam"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        
                />
            </TableRow>
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/mainecoon"
                        android:tag="mainecoon"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        
                />
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/chartreux"
                        android:tag="chartreux"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        
                />
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/scottishfold"
                        android:tag="scottishfold"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        
                />
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/britishshorthair"
                        android:tag="britishshorthair"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        
                />
            </TableRow>
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ragamuffin"
                        android:tag="ragamuffin"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        
                />
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/americanshorthair"
                        android:tag="americanshorthair"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        
                />
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/chinchilla"
                        android:tag="chinchilla"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        
                />
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/sibirya"
                        android:tag="sibirya"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        />
            </TableRow>
        </TableLayout>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>